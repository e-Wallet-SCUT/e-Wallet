<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ewallet.dao.TransDao">
    <!--查询余额-->
    <select id="selectAccount" resultType="Account">
        select * from account
        where account_customer_id=#{id} and account_type=#{type}
    </select>
    <!--插入转账记录-->
    <insert id="insertTransfer" parameterType="Transfer">
        insert into tranfer(transfer_pay_id,transfer_pay_type,transfer_target_type,transfer_target_id,transfer_amount,transfer_date,transfer_description)
        values(#{transfer_pay_id},#{transfer_pay_type},#{transfer_target_type},#{transfer_target_id},#{transfer_amount},NOW(),#{transfer_description})
    </insert>
    <!--插入交易记录-->
    <insert id="insertTransaction" parameterType="Transfer">
        insert into transaction(transaction_entity_long_id,transaction_entity_short_id,transaction_long_amount,transaction_short_amount,transaction_type,transaction_date,transaction_description)
        values(#{transfer_target_id},#{transfer_pay_id},#{transfer_amount},#{transfer_amount},"transfer",NOW(),#{transfer_description})
    </insert>
    <!--更新账户余额-->
    <update id="updateAccount" parameterType="Transfer">
        update account set account_balance=account_balance-#{transfer_amount}
        where account_customer_id=#{transfer_pay_id} and account_type=#{transfer_pay_type};
        update account set account_balance=account_balance+#{transfer_amount}
        where account_customer_id=#{transfer_target_id} and account_type=#{transfer_target_type}
    </update>
</mapper>